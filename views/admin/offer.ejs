<link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">

<div class="p-6">
  <!-- üß≠ Breadcrumb -->
  <nav class="text-sm mb-6 text-gray-500">
    <ol class="flex items-center space-x-2">
      <li><a href="/admin/dashboard" class="hover:underline text-gray-600">Admin</a></li>
      <li>/</li>
      <li class="text-gray-800 font-medium">Offers</li>
    </ol>
  </nav>

  <!-- üè∑Ô∏è Heading -->
  <div class="flex justify-between items-center mb-8 mt-10">
    <h1 class="text-xl font-semibold">Offer Management</h1>
    <a href="/admin/offers/new" class="bg-blue-600 text-white mt-12 px-4 py-2 rounded-md hover:bg-blue-700 transition">
      + Add Offer
    </a>
  </div>

  <!-- üìã Offer Table -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden mt-12">
    <table class="w-full text-left border-collapse">
      <thead class="bg-gray-200 text-gray-600 text-sm uppercase">
        <tr>
          <th class="py-3 px-4">No</th>
          <th class="py-3 px-4">Offer Name</th>
          <th class="py-3 px-4">Discount</th>
          <th class="py-3 px-4">Start Date</th>
          <th class="py-3 px-4">End Date</th>
          <th class="py-3 px-4 text-center">Status</th>
          <th class="py-3 px-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (offers.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center py-6 text-gray-500">No offers found.</td>
          </tr>
        <% } else { %>
          <% offers.forEach((offer, index) => { %>
            <tr class="border-b hover:bg-gray-50 <%= !offer.isActive ? 'opacity-50' : '' %>">
              <td class="py-3 px-4 font-medium text-gray-900"><%= index + 1 %></td>
              <td class="py-3 px-4 font-semibold"><%= offer.offerName %></td>
              <td class="py-3 px-4"><%= offer.discountPercentage %> %</td>
              <td class="py-3 px-4"><%= new Date(offer.validFrom).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
              <td class="py-3 px-4"><%= new Date(offer.validTo).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>

              <!-- ‚úÖ Status Toggle -->
              <td class="py-3 px-4 text-center">
                <label class="inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" <%= offer.isActive ? 'checked' : '' %>
                    onchange="toggleOfferStatus('<%= offer._id %>', this.checked)">
                  <div class="w-11 h-6 bg-gray-300 rounded-full peer peer-checked:bg-green-500 relative transition duration-300">
                    <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition peer-checked:translate-x-5"></div>
                  </div>
                </label>
              </td>

              <!-- ‚úèÔ∏èüóë Actions -->
              <td class="py-3 px-4 text-center">
                <div class="flex justify-center space-x-3">
                  <button onclick='openEditOffer(<%- JSON.stringify(offer) %>)'
                    class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 flex items-center space-x-1 text-sm">
                    <i class="fas fa-edit"></i><span>Edit</span>
                  </button>
                  <button onclick="deleteOffer('<%= offer._id %>')"
                    class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 flex items-center space-x-1 text-sm">
                    <i class="fas fa-trash"></i><span>Delete</span>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- ‚úèÔ∏è Edit Offer Modal -->
<div id="editOfferModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
  <div class="bg-white w-full max-w-4xl rounded-lg shadow-lg p-8 relative">
    <button onclick="closeEditOffer()" class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
    <h2 class="text-xl font-semibold mb-6 text-gray-800">Edit Offer</h2>

    <form id="editOfferForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Offer Name *</label>
        <input type="text" name="offerName"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Discount Percentage (%) *</label>
        <input type="number" name="discountPercentage" min="1" max="90"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Valid From *</label>
        <input type="date" name="validFrom"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Valid To *</label>
        <input type="date" name="validTo"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Apply to Categories</label>
        <select id="editCategorySelect" name="category" multiple>
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(cat => { %>
              <option value="<%= cat._id %>"><%= cat.name %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No categories available</option>
          <% } %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Apply to Products</label>
        <select id="editProductSelect" name="product" multiple>
          <% if (products && products.length > 0) { %>
            <% products.forEach(prod => { %>
              <option value="<%= prod.productId %>"><%= prod.title %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No products available</option>
          <% } %>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Apply to Brands</label>
        <select id="editBrandSelect" name="brand" multiple>
          <% if (brands && brands.length > 0) { %>
            <% brands.forEach(brand => { %>
              <option value="<%= brand._id %>"><%= brand.name %></option>
            <% }) %>
          <% } else { %>
            <option disabled>No brands available</option>
          <% } %>
        </select>
      </div>

      <div class="flex items-center space-x-3 mt-3 md:col-span-2">
        <input type="checkbox" name="isActive" id="editIsActive" class="w-5 h-5 accent-black">
        <label for="editIsActive" class="text-gray-700 font-medium">Active</label>
      </div>

      <div class="md:col-span-2 flex justify-start space-x-4 mt-6">
        <button type="submit" class="bg-black text-white px-6 py-2 rounded-md hover:bg-gray-800 transition">Update</button>
        <button type="button" onclick="closeEditOffer()"
          class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition">Cancel</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/pagination.ejs',{currentPage,totalPages,query}) %>

<!-- ‚úÖ Scripts -->
<script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  // üîß Declare global TomSelect instances
  let catSelect, prodSelect, brandSelect;

  function openEditOffer(offer) {
    const form = document.getElementById("editOfferForm");
    form.offerName.value = offer.offerName;
    form.discountPercentage.value = offer.discountPercentage;
    form.validFrom.value = new Date(offer.validFrom).toISOString().split("T")[0];
    form.validTo.value = new Date(offer.validTo).toISOString().split("T")[0];
    document.getElementById("editIsActive").checked = offer.isActive;

    // ‚úÖ Destroy existing TomSelect instances before creating new ones
    if (catSelect && catSelect.destroy) catSelect.destroy();
    if (prodSelect && prodSelect.destroy) prodSelect.destroy();
    if (brandSelect && brandSelect.destroy) brandSelect.destroy();

    // ‚úÖ Initialize new TomSelect instances
    catSelect = new TomSelect("#editCategorySelect", { plugins: ['remove_button'], create: false });
    prodSelect = new TomSelect("#editProductSelect", { plugins: ['remove_button'], create: false });
    brandSelect = new TomSelect("#editBrandSelect", { plugins: ['remove_button'], create: false });

    // ‚úÖ Pre-select existing options
    setTimeout(() => {
      if (offer.category) offer.category.forEach(id => catSelect.addItem(id));
      if (offer.product) offer.product.forEach(id => prodSelect.addItem(id));
      if (offer.brand) offer.brand.forEach(id => brandSelect.addItem(id));
    }, 150);

    form.dataset.offerId = offer._id;
    document.getElementById("editOfferModal").classList.remove("hidden");
  }

  function closeEditOffer() {
    document.getElementById("editOfferModal").classList.add("hidden");
    if (catSelect && catSelect.destroy) catSelect.destroy();
    if (prodSelect && prodSelect.destroy) prodSelect.destroy();
    if (brandSelect && brandSelect.destroy) brandSelect.destroy();
  }

  // üßæ Update Offer with SweetAlert
  document.getElementById("editOfferForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const form = e.target;
    const offerId = form.dataset.offerId;

    const formData = Object.fromEntries(new FormData(form).entries());
    formData.isActive = formData.isActive === "on";

    // ‚úÖ Collect TomSelect values
    formData.category = catSelect.getValue();
    formData.product = prodSelect.getValue();
    formData.brand = brandSelect.getValue();

    const res = await fetch(`/admin/offers/${offerId}`, {
      method: "PUT",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(formData),
    });

    const data = await res.json();
    if (data.success) {
      await Swal.fire({
        title: 'Updated!',
        text: 'Offer details updated successfully.',
        icon: 'success',
        confirmButtonColor: '#3085d6',
      });
      location.reload();
    } else {
      Swal.fire({
        title: 'Error!',
        text: data.message || 'Failed to update offer.',
        icon: 'error',
        confirmButtonColor: '#3085d6',
      });
    }
  });

  // üóëÔ∏è Delete Offer
  async function deleteOffer(id) {
    const result = await Swal.fire({
      title: 'Are you sure?',
      text: 'This offer will be permanently deleted.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, delete it!',
      cancelButtonText: 'Cancel',
    });

    if (result.isConfirmed) {
      const res = await fetch(`/admin/offers/${id}`, { method: "DELETE" });
      const data = await res.json();

      if (data.success) {
        await Swal.fire({
          title: 'Deleted!',
          text: 'Offer deleted successfully.',
          icon: 'success',
          confirmButtonColor: '#3085d6',
        });
        location.reload();
      } else {
        Swal.fire({
          title: 'Error!',
          text: data.message || 'Error deleting offer.',
          icon: 'error',
          confirmButtonColor: '#3085d6',
        });
      }
    }
  }

  // üîÑ Toggle Offer Status
  async function toggleOfferStatus(id, status) {
    try {
      const res = await fetch(`/admin/offers/${id}/status`, {
        method: "PATCH",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ isActive: status }),
      });
      const data = await res.json();

      if (data.success) {
        Swal.fire({
          toast: true,
          position: 'bottom-end',
          icon: 'success',
          title: `Offer ${status ? 'activated' : 'deactivated'}!`,
          showConfirmButton: false,
          timer: 1500,
          timerProgressBar: true,
        });
      } else {
        Swal.fire({
          toast: true,
          position: 'bottom-end',
          icon: 'error',
          title: 'Failed to update status',
          showConfirmButton: false,
          timer: 1500,
          timerProgressBar: true,
        });
      }
    } catch (error) {
      Swal.fire({
        title: 'Error!',
        text: 'Something went wrong while updating the status.',
        icon: 'error',
        confirmButtonColor: '#3085d6',
      });
    }
  }
</script>
