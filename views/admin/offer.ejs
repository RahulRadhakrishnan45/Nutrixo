<div class="p-6">
  <!-- ðŸ§­ Breadcrumb -->
  <nav class="text-sm mb-6 text-gray-500">
    <ol class="flex items-center space-x-2">
      <li>
        <a href="/admin/dashboard" class="hover:underline text-gray-600">Admin</a>
      </li>
      <li>/</li>
      <li class="text-gray-800 font-medium">Offers</li>
    </ol>
  </nav>

  <!-- ðŸ·ï¸ Heading -->
  <div class="flex justify-between items-center mb-8 mt-10">
    <h1 class="text-xl font-semibold">Offer Management</h1>
    <a href="/admin/offers/new"
      class="bg-blue-600 text-white mt-12 px-4 py-2 rounded-md hover:bg-blue-700 transition">
      + Add Offer
    </a>
  </div>

  <!-- ðŸ“‹ Offer Table -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden mt-12">
    <table class="w-full text-left border-collapse">
      <thead class="bg-gray-200 text-gray-600 text-sm uppercase">
        <tr>
          <th class="py-3 px-4">No</th>
          <th class="py-3 px-4">Offer Name</th>
          <th class="py-3 px-4">Discount</th>
          <th class="py-3 px-4">Start Date</th>
          <th class="py-3 px-4">End Date</th>
          <th class="py-3 px-4 text-center">Status</th>
          <th class="py-3 px-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (offers.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center py-6 text-gray-500">No offers found.</td>
          </tr>
        <% } else { %>
          <% offers.forEach((offer, index) => { %>
            <tr class="border-b hover:bg-gray-50 <%= !offer.isActive ? 'opacity-50' : '' %>">
              <td class="py-3 px-4 font-medium text-gray-900"><%= index + 1 %></td>
              <td class="py-3 px-4 font-semibold"><%= offer.offer_name %></td>
              <td class="py-3 px-4"><%= offer.discount_percent %> %</td>
              <td class="py-3 px-4"><%= offer.start_date_formatted %></td>
              <td class="py-3 px-4"><%= offer.end_date_formatted %></td>

              <!-- âœ… Status Toggle -->
              <td class="py-3 px-4 text-center">
                <label class="inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" <%= offer.isActive ? 'checked' : '' %>
                    onchange="toggleOfferStatus('<%= offer._id %>', this.checked)">
                  <div class="w-11 h-6 bg-gray-300 rounded-full peer peer-checked:bg-green-500 relative transition duration-300">
                    <div class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full transition peer-checked:translate-x-5"></div>
                  </div>
                </label>
              </td>

              <!-- âœï¸ðŸ—‘ Actions -->
              <td class="py-3 px-4 text-center">
                <div class="flex justify-center space-x-3">
                  <button onclick='openEditOffer(<%- JSON.stringify(offer) %>)'
                    class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 flex items-center space-x-1 text-sm">
                    <i class="fas fa-edit"></i><span>Edit</span>
                  </button>
                  <button onclick="deleteOffer('<%= offer._id %>')"
                    class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 flex items-center space-x-1 text-sm">
                    <i class="fas fa-trash"></i><span>Delete</span>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- âœï¸ Edit Offer Modal -->
<div id="editOfferModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
  <div class="bg-white w-full max-w-2xl rounded-lg shadow-lg p-8 relative">
    <button onclick="closeEditOffer()" class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
    <h2 class="text-xl font-semibold mb-6 text-gray-800">Edit Offer</h2>

    <form id="editOfferForm" class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Offer Name -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Offer Name *</label>
        <input type="text" name="offer_name"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <!-- Discount Percent -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Discount (%) *</label>
        <input type="number" name="discount_percent" min="1" max="90"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <!-- Start Date -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Start Date *</label>
        <input type="date" name="start_date"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <!-- End Date -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">End Date *</label>
        <input type="date" name="end_date"
          class="w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none" />
      </div>

      <!-- Active Toggle -->
      <div class="flex items-center space-x-3 mt-3 md:col-span-2">
        <input type="checkbox" name="isActive" id="editIsActive" class="w-5 h-5 accent-black">
        <label for="editIsActive" class="text-gray-700 font-medium">Active</label>
      </div>

      <!-- Buttons -->
      <div class="md:col-span-2 flex justify-start space-x-4 mt-6">
        <button type="submit" class="bg-black text-white px-6 py-2 rounded-md hover:bg-gray-800 transition">Update</button>
        <button type="button" onclick="closeEditOffer()"
          class="bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300 transition">Cancel</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/pagination.ejs',{currentPage,totalPages,query}) %>
