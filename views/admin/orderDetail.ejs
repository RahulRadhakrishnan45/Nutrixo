<body class="bg-gray-50 p-6">
  <div class="max-w-6xl mx-auto space-y-10">
    <!-- ðŸ”™ Back link -->
    <a href="/admin/orders" class="text-blue-600 mb-4 inline-block hover:underline">&larr; Back to All Orders</a>

    <!-- ðŸ§¾ Order header -->
    <h1 class="text-2xl font-semibold mb-6">Order #<%= order.orderNumber %></h1>

    <!-- ðŸ’³ Top Summary Cards -->
    <div class="grid grid-cols-3 gap-4">
      <!-- Customer -->
      <div class="bg-white p-5 rounded-lg shadow-md">
        <h2 class="text-lg font-bold mb-2">Customer Details</h2>
        <p class="text-base mt-2 font-medium"><%= order.user?.name || "â€”" %></p>
        <p class="text-sm text-gray-600"><%= order.user?.email || "â€”" %></p>
      </div>

      <!-- Shipping -->
      <div class="bg-white p-5 rounded-lg shadow-md">
        <h3 class="text-lg font-bold mb-2">Shipping Address</h3>
        <p class="text-base font-medium"><%= order.orderAddress.fullname %></p>
        <p class="text-base"><%= order.orderAddress.address %></p>
        <p class="text-sm text-gray-600"><%= order.orderAddress.district %>, <%= order.orderAddress.state %></p>
        <p class="text-sm text-gray-600">PIN: <%= order.orderAddress.pincode %></p>
      </div>

      <!-- Order Summary -->
      <div class="bg-white p-5 rounded-lg shadow-md">
        <h3 class="text-lg font-bold mb-3">Order Summary</h3>
        <div class="space-y-2 text-base"></div>
            <p><span class="font-semibold">Payment Status:</span> <%= order.paymentStatus %></p>
            <p><span class="font-semibold">Payment Method:</span> <%= order.paymentMethod || "â€”" %></p>
            <p>
              <span class="font-semibold">Coupon Applied:</span>
              <% if (order.coupon && order.couponDiscount > 0) { %>
                <span class="text-green-600">
                  â‚¹<%= order.couponDiscount.toFixed(2) %>
                </span>
                <% if (order.coupon.code) { %>
                  <span class="text-red-700 ml-1">(<%= order.coupon.code %>)</span>
                <% } %>
              <% } else { %>
                <span class="text-gray-500">None</span>
              <% } %>
            </p>


                <p class="font-semibold text-lg mt-3 border-t pt-2">
                    Total Amount: â‚¹<%= order.totalAmount %>
                </p>
        </div>
      </div>
    </div>

    <!-- ðŸ“¦ Order Details -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8 max-w-6xl mx-auto">
      <div class="flex items-center mb-4">
        <svg class="w-6 h-6 text-blue-600 mr-3" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M4 6h16M4 12h16M4 18h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <h2 class="text-xl font-semibold">Order Details</h2>
      </div>

      <!-- Item Cards -->
      <div class="space-y-6">
        <% order.items.forEach(function(item){ 
          const hasCancelRequest = item.status === 'CANCELLATION REQUESTED' || item.cancellationRequest?.status === 'REQUESTED';
          const hasReturnRequest = item.status === 'RETURN REQUESTED' || item.returnRequest?.status === 'REQUESTED';
        %>

        <div id="item-<%= item._id %>" class="bg-white rounded-lg shadow-md p-6 flex gap-6 items-start">

          <!-- Product Image -->
          <div class="w-28 h-28 rounded bg-gray-100 flex items-center justify-center overflow-hidden">
            <% if (item.image) { %>
              <img src="<%= item.image %>" alt="<%= item.title %>" class="object-cover w-full h-full">
            <% } else { %>
              <div class="text-gray-400 text-sm">No Image</div>
            <% } %>
          </div>

          <!-- âš ï¸ Warning icon -->
          <div class="flex-shrink-0 flex items-center">
            <% if (hasCancelRequest || hasReturnRequest) { %>
              <div class="w-10 h-10 rounded-full bg-yellow-400 flex items-center justify-center shadow">
                <span class="text-white font-bold text-lg">!</span>
              </div>
            <% } else { %>
              <div class="w-10 h-10"></div>
            <% } %>
          </div>

          <!-- ðŸ§¾ Product Details -->
          <div class="flex-1">
            <h3 class="text-lg font-semibold mb-1"><%= item.title %></h3>
            <p class="text-sm text-gray-600 mb-2">Qty: <%= item.quantity %> â€¢ Price: â‚¹<%= item.price %></p>
            <p class="text-sm text-gray-500 mb-4">Flavour: <%= item.flavour || 'â€”' %> â€¢ Size: <%= item.size || 'â€”' %></p>

            <div class="flex items-center gap-6">
              <!-- Status dropdown -->
              <div class="w-64">
                <label class="block text-xs font-medium text-gray-600 mb-1">Status</label>
                <select data-item-id="<%= item._id %>" data-prev-status="<%= item.status %>" class="status-select block w-full border rounded px-3 py-2 bg-yellow-50">
                  <% STATUS_ENUM.forEach(function(s){ %>
                    <option value="<%= s %>" <%= item.status === s ? 'selected' : '' %>><%= s %></option>
                  <% }) %>
                </select>
              </div>

              <!-- Expected Delivery -->
              <div>
                <label class="block text-xs font-medium text-gray-600 mb-1">Expected Delivery</label>
                <input 
                  type="date" 
                  value="<%= item.expectedDelivery ? new Date(item.expectedDelivery).toISOString().slice(0,10) : '' %>" 
                  class="border rounded px-3 py-2" 
                  disabled
                >
              </div>
            </div>
          </div>

          <!-- ðŸ“¨ Request Box -->
          <div class="w-72">
            <% if (hasCancelRequest) { %>
              <div class="border rounded p-4 bg-red-50 border-red-200">
                <h4 class="text-red-600 font-semibold mb-2">Cancellation Requested</h4>
                <p class="text-sm text-red-600 italic mb-3">
                  Reason: "<%= item.cancellationRequest?.reason || 'No reason provided' %>"
                </p>
                <div class="flex gap-3">
                  <button data-action="approve-cancel" data-item-id="<%= item._id %>" class="approveCancelBtn px-4 py-2 rounded text-white bg-green-500 hover:bg-green-600">Approve</button>
                  <button data-action="reject-cancel" data-item-id="<%= item._id %>" class="rejectCancelBtn px-4 py-2 rounded text-red-500 border border-red-300 bg-white hover:bg-red-50">Reject</button>
                </div>
              </div>
            <% } else if (hasReturnRequest) { %>
              <div class="border rounded p-4 bg-red-50 border-red-200">
                <h4 class="text-red-600 font-semibold mb-2">Return Requested</h4>
                <p class="text-sm text-red-600 italic mb-3">
                  Reason: "<%= item.returnRequest?.reason || 'No reason provided' %>"
                </p>
                <div class="flex gap-3">
                  <button data-action="approve-return" data-item-id="<%= item._id %>" class="approveReturnBtn px-4 py-2 rounded text-white bg-green-500 hover:bg-green-600">Approve</button>
                  <button data-action="reject-return" data-item-id="<%= item._id %>" class="rejectReturnBtn px-4 py-2 rounded text-red-500 border border-red-300 bg-white hover:bg-red-50">Reject</button>
                </div>
              </div>
            <% } else { %>
              <div class="h-24"></div>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>

  <script>
document.addEventListener("DOMContentLoaded", function () {
  document.querySelectorAll(".status-select").forEach(sel => {
    const current = sel.value;

    if (current === "CANCELLATION REQUESTED" || current === "RETURN REQUESTED") {
      sel.disabled = true;
    }
  })

  document.querySelectorAll(".status-select").forEach(sel => {
    [...sel.options].forEach(opt => {
      if (
        opt.value === "CANCELLATION REQUESTED" ||
        opt.value === "RETURN REQUESTED" ||
        opt.value === "RETURNED"
      ) {
        opt.disabled = true;
        opt.classList.add("text-gray-400");
      }
    });
  })

  // ðŸš« Disable dropdown for cancelled or returned items initially
  document.querySelectorAll(".status-select").forEach(sel => {
    const current = sel.value;
    if (["CANCELLED", "RETURNED"].includes(current)) {
      sel.disabled = true;
    }
  });

  // Helper: revert to previous status stored on the select
  function revertSelect(selectEl) {
    const prev = selectEl.dataset.prevStatus ?? "";
    selectEl.value = prev;
  }

  document.querySelectorAll(".status-select").forEach(sel => {
    const current = sel.value;

    // If the item is NOT delivered â†’ disable return-related options
    if (current !== "DELIVERED") {
      [...sel.options].forEach(opt => {
        if (opt.value === "RETURN REQUESTED" || opt.value === "RETURNED") {
          opt.disabled = true;
          opt.classList.add("text-gray-400"); // optional visual cue
        }
      });
    }
  });

  // ðŸ”„ HANDLE STATUS CHANGE (WITH SWEETALERT FOR CANCEL)
  document.querySelectorAll(".status-select").forEach(function (sel) {
    sel.addEventListener("change", async function (e) {

      const selectEl = e.target;
      const newStatus = selectEl.value;
      const itemId = selectEl.dataset.itemId;
      const orderId = "<%= order._id %>";
      const prevStatus = selectEl.dataset.prevStatus ?? "";

      // If selecting CANCELLED -> confirm
      if (newStatus === "CANCELLED") {
        const result = await Swal.fire({
          title: "Confirm Cancellation",
          text: "Are you sure you want to cancel this item?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#3085d6",
          confirmButtonText: "Yes, cancel it",
        });

        if (!result.isConfirmed) {
          // revert dropdown to previous value stored in data attribute
          revertSelect(selectEl);
          return;
        }
      }

      // optimistically disable selection to avoid double clicks while request pending
      selectEl.disabled = true;

      try {
        const res = await fetch(`/admin/orders/${orderId}/items/${itemId}/status`, {
          method: "PATCH",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ status: newStatus }),
        });

        const text = await res.text();
        let data;
        try { data = JSON.parse(text); } catch { data = null; }

        if (!res.ok) {
          // revert UI
          revertSelect(selectEl);
          selectEl.disabled = false;
          throw new Error((data && data.error) ? data.error : "Failed to update");
        }

        // ðŸŸ© SUCCESS EFFECT
        selectEl.classList.add("ring", "ring-green-300");
        setTimeout(() => selectEl.classList.remove("ring", "ring-green-300"), 1200);

        // update stored prev-status to the new status
        selectEl.dataset.prevStatus = newStatus;

        // If cancelled or returned â†’ keep dropdown disabled
        if (["CANCELLED", "RETURNED"].includes(newStatus)) {
          selectEl.disabled = true;
        } else {
          // re-enable for non-terminal statuses
          selectEl.disabled = false;
        }

      } catch (err) {
        // show user-friendly error and revert
        Swal.fire("Error", err.message || "Update failed", "error");
        // revert value (if not already reverted)
        revertSelect(selectEl);
        selectEl.disabled = false;
      }
    });
  });


  // ======================================================
  // ðŸš¨ APPROVE / REJECT BUTTONS WITH SWEETALERT CONFIRMATION
  // ======================================================
  function handleAction(selector, urlSuffix) {
    document.querySelectorAll(selector).forEach((btn) => {
      btn.addEventListener("click", async () => {

        const result = await Swal.fire({
          title: "Are you sure?",
          text: "This action cannot be undone.",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#16a34a",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, proceed",
        });

        if (!result.isConfirmed) return;

        const itemId = btn.dataset.itemId;
        const orderId = "<%= order._id %>";
        const url = `/admin/orders/${orderId}/items/${itemId}/${urlSuffix}`;

        try {
          const res = await fetch(url, { method: "PATCH" });
          if (!res.ok) throw new Error("Server error");
          location.reload(); // reflect the new UI state
        } catch (err) {
          Swal.fire("Error", err.message, "error");
        }
      });
    });
  }

  handleAction(".approveCancelBtn", "cancellation/approve");
  handleAction(".rejectCancelBtn", "cancellation/reject");
  handleAction(".approveReturnBtn", "return/approve");
  handleAction(".rejectReturnBtn", "return/reject");

});
</script>
</body>
