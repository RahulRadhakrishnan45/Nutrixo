

<!-- Page Title and Breadcrumb -->
<div class="bg-gray-100 py-7 px-4">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-xl font-bold mb-2">Sign Up</h1>
    <nav class="text-sm text-gray-600">
      <a href="/" class="hover:underline font-medium">Nutrixo</a> / <span>Sign Up</span>
    </nav>
  </div>
</div>

<!-- Main Sign Up Form -->
<main class="flex-grow flex justify-center items-start py-12 px-4">
  <div class="w-full max-w-md bg-white p-8 rounded-md shadow-sm border">

    <!-- Google Sign Up Button -->
    <button class="w-full flex items-center justify-center border border-gray-300 rounded-md py-4 text-sm mb-4 hover:bg-gray-50">
      <img src="https://www.google.com/favicon.ico" alt="Google" class="w-5 h-5 mr-2" />
      Continue with Google
    </button>

    <!-- Divider -->
    <div class="flex items-center justify-center text-gray-500 text-sm mb-6">
      <span class="w-1/5 border-t border-gray-300 mr-3"></span>
      OR
      <span class="w-1/5 border-t border-gray-300 ml-3"></span>
    </div>

    <!-- Sign Up Form -->
    <form action="/auth/signup" method="POST" class="space-y-4">

      <div>
        <label for="name" class="block text-sm font-medium">Name</label>
        <input type="text" name="name" id="name" required
               class="w-full border rounded-md px-3 py-2 mt-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium">Email</label>
        <input type="email" name="email" id="email" required
               class="w-full border rounded-md px-3 py-2 mt-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <div>
        <label for="password" class="block text-sm font-medium">Password</label>
        <input type="password" name="password" id="password" required
               class="w-full border rounded-md px-3 py-2 mt-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <div>
        <label for="confirmPassword" class="block text-sm font-medium">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required
               class="w-full border rounded-md px-3 py-2 mt-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <div>
        <label for="mobile" class="block text-sm font-medium">Mobile</label>
        <input type="tel" name="mobile" id="mobile" required
               class="w-full border rounded-md px-3 py-2 mt-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </div>

      <p class="text-xs text-gray-500 mt-2">
        By creating an account you agree with our <a href="#" class="underline">Terms of Service</a>, <a href="#" class="underline">Privacy Policy</a>.
      </p>

      <button type="submit"
              class="w-full bg-gray-900 text-white py-2 rounded-md hover:bg-gray-800 transition mt-2">
        Create account
      </button>
    </form>

    <!-- Already have an account -->
    <p class="mt-6 text-center text-sm text-gray-600">
      Already have an account?
      <a href="/user/login" class="text-blue-600 hover:underline">Log in</a>
    </p>

  </div>
</main>


</html>