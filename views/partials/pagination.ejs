<div class="flex justify-center mt-6 space-x-2">
  <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>" 
       class="px-3 py-1 border rounded-md bg-gray-100 hover:bg-gray-200">Prev</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <a href="?page=<%= i %>"
       class="px-3 py-1 border rounded-md 
              <%= i === currentPage ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-100' %>">
       <%= i %>
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>" 
       class="px-3 py-1 border rounded-md bg-gray-100 hover:bg-gray-200">Next</a>
  <% } %>
</div>
