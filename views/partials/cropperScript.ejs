<!-- Cropper.js CSS & JS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<!-- Crop Modal -->
<div id="cropModal" class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center hidden z-50">
  <div class="bg-white p-4 rounded-md w-3/4 max-w-xl">
    <h2 class="text-lg font-semibold mb-2">Crop Image</h2>
    <div class="max-h-[400px] overflow-hidden">
      <img id="cropImage" class="max-w-full" />
    </div>
    <div class="flex justify-end mt-4 space-x-2">
      <button id="cropCancel" class="px-4 py-2 bg-gray-500 text-white rounded-md">Cancel</button>
      <button id="cropSave" class="px-4 py-2 bg-blue-600 text-white rounded-md">Crop & Save</button>
    </div>
  </div>
</div>
