<div class="w-full bg-black text-white text-center py-2 text-sm">
  Get 30% OFF on your first order. Order now
</div>

<!-- Header/Navigation -->
<header class="bg-white py-4 px-6 shadow-sm">
  <div class="container mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="/">
      <div class="flex items-center mr-4 md:mr-0">
        <img class="w-24 md:w-28 h-auto max-w-xs" src="/images/Logo.png" alt="Logo" />
      </div>
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="w-32 text-center text-gray-700 hover:text-gray-900">Home</a>
      
      <!-- Category Dropdown -->
      <div class="relative w-32 group">
        <button class="w-full text-center text-gray-700 hover:text-gray-900 flex items-center justify-center">
          Category
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
          <!-- All option -->
          <a href="/products?category=All" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">All</a>
          <% if (categories && categories.length) { %>
            <% categories.forEach(cat => { %>
              <a href="/products?category=<%= cat %>" class="block px-4 py-2 text-gray-700 hover:bg-gray-100"><%= cat %></a>
            <% }) %>
          <% } %>
        </div>
      </div>
      
      <!-- Brands Dropdown -->
      <div class="relative w-32 group">
        <button class="w-full text-center text-gray-700 hover:text-gray-900 flex items-center justify-center">
          Brands
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div class="absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
          <!-- All option -->
          <a href="/products?brand=All" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">All</a>
          <% if (brands && brands.length) { %>
            <% brands.forEach(brand => { %>
              <a href="/products?brand=<%= brand %>" class="block px-4 py-2 text-gray-700 hover:bg-gray-100"><%= brand %></a>
            <% }) %>
          <% } %>
        </div>
      </div>
      
      <a href="/about" class="w-32 text-center text-gray-700 hover:text-gray-900">About</a>
      <a href="/contact" class="w-32 text-center text-gray-700 hover:text-gray-900">Contact</a>
    </nav>

    <!-- Search and Cart -->
    <div class="flex items-center space-x-4">
      
      <form action="/products" method="GET" class="relative">
        <input
          id="searchInput"
          name="q"
          type="text"
          placeholder="Search products"
          class="pl-10 pr-10 py-2 rounded-md border border-gray-300 focus:outline-none 
                 focus:ring-1 focus:ring-gray-400 focus:border-gray-400 w-28 md:w-64 text-ellipsis"
        />
        <!-- Search icon button -->
        <button type="submit" class="absolute left-3 top-2.5 text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </form>

      <!-- Wishlist Button -->
      <a href="/wishlist" class="text-gray-700 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </a>

      <!-- Cart Button -->
      <a href="/cart" class="relative text-gray-700 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        
        <span id="cartText"
            class="absolute <%= (typeof cartLength !== 'undefined' && cartLength) ? 'block' : 'hidden' %> -top-2 -right-2 bg-red-500 text-white text-xs font-bold w-5 h-5 flex items-center justify-center rounded-full">
          <%= typeof cartLength !== 'undefined' ? cartLength : 0 %>
        </span>

      </a>

      <!-- Profile -->
      <a href="/profile" class="text-gray-700 hover:text-gray-900">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </a>
    </div>
  </div>
</header>

<!-- Add this CSS to your stylesheet -->
<style>
  /* Smooth dropdown animation for nav menus */
  .group:hover .group-hover\:opacity-100 {
    transition-delay: 150ms;
  }
  /* Custom scrollbar for dropdowns */
  .overflow-y-auto::-webkit-scrollbar {
    width: 4px;
  }
  .overflow-y-auto::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
  }
  .overflow-y-auto::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>

<script>
  function updateCartBadge(cartLength) {
    const badge = document.getElementById('cartText')
    if (!badge) return
    if (cartLength && cartLength !== 0) {
      badge.textContent = cartLength
      badge.classList.remove('hidden')
    } else {
      badge.classList.add('hidden')
    }
  }
</script>

