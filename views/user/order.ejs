<body class="bg-gray-50 min-h-screen">
  <div class="flex min-h-screen">
    
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-md">
      <%- include('../partials/userSidebar') %>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col p-10">
      <h1 class="text-2xl font-bold mb-6">Orders</h1>

      <div class="flex-1 space-y-6 max-w-6xl mx-auto w-full">
        <% if (orders && orders.length > 0) { %>
          <% orders.forEach(order => { %>
            <!-- Order Card -->
            <div class="bg-white border rounded-lg p-6 shadow-sm">
              
              <!-- Order Header -->
              <div class="flex justify-between items-center mb-4">
                <p class="text-sm text-gray-600">Ordered On: <%= order.createdAt.toDateString() %></p>
                <p class="text-lg font-bold">‚Çπ<%= order.totalAmount.toFixed(2) %></p>
              </div>

              <!-- Order Items -->
              <div class="space-y-4">
                <% order.items.forEach(item => { %>
                  <div class="flex items-start justify-between border-b pb-4">
                    
                    <!-- LEFT -->
                    <div class="flex gap-4">
                      <img src="<%= item.image %>" alt="Product Image" class="w-20 rounded" />
                      <div>
                        <h2 class="font-semibold text-lg"><%= item.title %></h2>
                        <p class="text-sm text-gray-600">Qty: <%= item.quantity %> | Size: <%= item.size %></p>
                        <p class="text-sm text-gray-600">‚Çπ<%= item.price %> each</p>
                        <p class="text-sm text-gray-600">
                          Delivering to: 
                          <%= order.orderAddress.fullname %>, 
                          <%= order.orderAddress.address %>, 
                          <%= order.orderAddress.district %>, 
                          <%= order.orderAddress.state %>, 
                          <%= order.orderAddress.pincode %>, 
                          <%= order.orderAddress.country %>
                        </p>
                      </div>
                    </div>

                    <!-- RIGHT -->
                    <div class="flex flex-col items-end space-y-2">
                      <% if (item.status === 'PROCESSING') { %>
                        <span class="px-3 py-1 text-sm rounded-full bg-yellow-100 text-yellow-800">Processing</span>
                      <% } else if (item.status === 'CANCELLED') { %>
                        <span class="px-3 py-1 text-sm rounded-full bg-red-100 text-red-800">Cancelled</span>
                      <% } else if (item.status === 'DELIVERED') { %>
                        <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800">Delivered</span>
                      <% } %>

                      <a href="/orders/<%= order._id %>/invoice"
                         class="flex items-center text-sm text-gray-600 hover:text-gray-800">
                        üìÑ Invoice
                      </a>
                      <a href="/orders/<%= order._id %>?itemId=<%= item._id %>"
                         class="px-4 py-2 bg-black text-white rounded hover:bg-gray-800">
                        View Order
                      </a>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-gray-600 text-center">No orders found.</p>
        <% } %>
      </div>

      <div class="mt-6 sticky bottom-0 bg-gray-50 py-4 flex justify-center border-t">
        <a href="/products"
           class="px-6 py-2 border rounded-lg text-gray-700 hover:bg-gray-100">
          ‚Üê Continue Shopping
        </a>
      </div>
    </div>
  </div>
</body>
