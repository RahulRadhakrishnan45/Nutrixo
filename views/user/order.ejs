<body class="bg-gray-50 min-h-screen">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-white shadow-md">
      <%- include('../partials/userSidebar') %>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex justify-center items-start p-10">
      <!-- White Card Container -->
      <div class="w-full max-w-6xl bg-white shadow-md rounded-lg p-10 min-h-[600px]">

        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-2xl font-bold text-gray-800">Orders</h1>
        </div>

        <!-- Orders Section -->
        <% if (orders && orders.length > 0) { %>
          <div class="space-y-6">
            <% orders.forEach(order => { %>
              <!-- Each Order Card -->
              <div class="border border-gray-200 rounded-lg p-6 bg-gray-50 hover:shadow-md transition">
                <div class="flex justify-between items-center mb-4">
                  <p class="text-sm text-gray-600">
                    Ordered On: <%= order.createdAt.toDateString() %>
                  </p>
                  <p class="text-lg font-bold text-gray-800">
                    ‚Çπ<%= order.totalAmount.toFixed(2) %>
                  </p>
                </div>

                <div class="space-y-4">
                  <% order.items.forEach(item => { %>
                    <div class="flex items-start justify-between border-b pb-4 last:border-b-0">
                      <!-- LEFT -->
                      <div class="flex gap-4">
                        <img
                          src="<%= item.image %>"
                          alt="Product Image"
                          class="w-20 h-20 object-cover rounded"
                        />
                        <div>
                          <h2 class="font-semibold text-lg text-gray-800"><%= item.title %></h2>
                          <p class="text-sm text-gray-600">
                            Qty: <%= item.quantity %> | Size: <%= item.size %>
                          </p>
                          <p class="text-sm text-gray-600">‚Çπ<%= item.price %> each</p>
                          <p class="text-sm text-gray-600">
                            Delivering to: 
                            <%= order.orderAddress.fullname %>, 
                            <%= order.orderAddress.address %>, 
                            <%= order.orderAddress.district %>, 
                            <%= order.orderAddress.state %>, 
                            <%= order.orderAddress.pincode %>, 
                            <%= order.orderAddress.country %>
                          </p>
                        </div>
                      </div>

                      <!-- RIGHT -->
                      <div class="flex flex-col items-end space-y-2">
                        <% if (item.status === 'PROCESSING') { %>
                          <span class="px-3 py-1 text-sm rounded-full bg-yellow-100 text-yellow-800">Processing</span>
                        <% } else if (item.status === 'CANCELLED') { %>
                          <span class="px-3 py-1 text-sm rounded-full bg-red-100 text-red-800">Cancelled</span>
                        <% } else if (item.status === 'DELIVERED') { %>
                          <span class="px-3 py-1 text-sm rounded-full bg-green-100 text-green-800">Delivered</span>
                        <% } %>

                        <a
                          href="/orders/<%= order._id %>/invoice"
                          class="flex items-center text-sm text-gray-600 hover:text-gray-800"
                        >
                          üìÑ Invoice
                        </a>

                        <a
                          href="/orders/<%= order._id %>?itemId=<%= item._id %>"
                          class="px-4 py-2 bg-black text-white rounded hover:bg-gray-800"
                        >
                          View Order
                        </a>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>
            <% }) %>
          </div>

        <% } else { %>
          <!-- If No Orders -->
          <div class="flex flex-col items-center justify-center text-center py-10">
            <dotlottie-wc
              src="https://lottie.host/d3fc8aff-8670-4850-ab07-c21624e934ad/q64xZVENGn.lottie"
              style="width: 300px; height: 300px"
              autoplay
              loop>
            </dotlottie-wc>
            <p class="mt-6 text-gray-600 text-lg font-medium">No orders found</p>
          </div>
        <% } %>

        <!-- Footer -->
        <div class="mt-10 border-t pt-6 flex justify-center bg-gray-50 rounded-b-lg -mx-10 -mb-10 p-6">
          <a
            href="/products"
            class="px-6 py-2 border rounded-lg text-gray-700 hover:bg-gray-100 transition"
          >
            ‚Üê Continue Shopping
          </a>
        </div>

      </div>
    </div>
  </div>
</body>

<script src="/js/logout.js"></script>
